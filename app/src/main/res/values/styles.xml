<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="RoundedCorners">
        <item name="cornerSize">20%</item>
    </style>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/ebony_clay</item>
        <item name="colorPrimaryDark">@color/ebony_clay</item>
        <item name="colorAccent">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="NavigationMenuItemStyle" parent="@style/Widget.MaterialComponents.Button.TextButton.Icon">
        <item name="iconTint">@color/white</item>
        <item name="android:textColor">@color/foam</item>
        <item name="textAllCaps">false</item>
    </style>

</resources>